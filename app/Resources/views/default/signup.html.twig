        <div class="content2">
            <div class="grids-heading gallery-heading signup-heading">
                <h2>Sign Up</h2>
            </div>
            <form action="{{ path("app_default_signup") }}" method="post">
                <input type="text" name="userId" placeholder="Student ID">
                <input type="text" name="studentName" placeholder="Name">
                <input type="text" name="studentContact" placeholder="Contact Number">
