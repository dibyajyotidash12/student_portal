{% block body %}


    <section class="wrapper scrollable">
        <nav class="user-menu">
            <a href="javascript:;" class="main-menu-access">
                <i class="icon-proton-logo"></i>
                <i class="icon-reorder"></i>
            </a>
        </nav>
        <section class="title-bar">
            <div class="logo">
                <h1><a href="index.html"><img src="images/logo.png" alt="" />Colored</a></h1>
            </div>
            <div class="full-screen">
                <section class="full-top">
                    <button id="toggle"><i class="fa fa-arrows-alt" aria-hidden="true"></i></button>
                </section>
            </div>

            <div class="header-right">
                <div class="profile_details_left">

                    <div class="profile_details">
                        <ul>
                            <li class="dropdown profile_details_drop">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <div class="profile_img">
                                        <span class="prfil-img"><i class="fa fa-user" aria-hidden="true"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu drp-mnu">
                                    <li> <a href="#"><i class="fa fa-sign-out"></i> Logout</a> </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </section>
        <div class="main-grid">
            <div class="agile-grids">
                <!-- input-forms -->
                <div class="grids">

                    <div class="panel panel-widget forms-panel">
                        <div class="progressbar-heading general-heading">
                            <h4>Profile Update:</h4>
                        </div>

                        <div class="forms">
                            <h3 class="title1"></h3>
                            {% if notification is defined and notification =="1"  %}
                                <div style="margin: 20px;padding: 10px;background: #0e8f9f;color: #ffffdd;">Profile Data Updated</div>
                            {% endif %}
                            {% if notification is defined and notification =="2"  %}
                                <div style="margin: 20px;padding: 10px;color: #ffffdd;background: #2CCCAB;">Error in Updating </div>
                            {% endif %}
                            {% if studentObject is defined  %}
                            <form action="{{ path("app_default_profile_update") }}" method="post" style="padding: 20px;">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Name:</label>
                                    <input type="hidden" name="student_id" class="form-control" id="exampleInputEmail1" placeholder="Enter Name" value="{{ studentObject.studentId }}">
                                    <input type="text" name="student_name" class="form-control" id="exampleInputEmail1" placeholder="Enter Name" value="{{ studentObject.studentName }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Contact Number:</label>
                                    <input type="text" name="student_contact" class="form-control" id="exampleInputEmail1" placeholder="Enter Contact Number" value="{{ studentObject.studentContact }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Mail ID:</label>
                                    <input type="email" name="student_mail" class="form-control" id="exampleInputEmail1" placeholder="Enter mail ID" value="{{ studentObject.mailId }}">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Date Of Birth:</label>
                                    <input type="date" name="student_dob" class="form-control" id="exampleInputEmail1" placeholder="Enter Date of Birth" value="{{ studentObject.dateOfBirth }}">
                                </div>
                                <button type="submit" class="btn btn-default w3ls-button">Update</button>
                            </form>
                            {% endif %}


                        </div>
                    </div>




                </div>
                <!-- //input-forms -->
            </div>
        </div>
        <!-- footer -->
        <div class="footer">
            <p>Â© 2016 Colored . All Rights Reserved .</p>
        </div>
        <!-- //footer -->
    </section>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/proton.js') }}"></script>
{% endblock %}

