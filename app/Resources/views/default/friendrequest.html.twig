{% block body %}


    <section class="wrapper scrollable">
        <nav class="user-menu">
            <a href="javascript:;" class="main-menu-access">
                <i class="icon-proton-logo"></i>
                <i class="icon-reorder"></i>
            </a>
        </nav>
        <section class="title-bar">
            <div class="logo">
                <h1><a href="index.html"><img src="images/logo.png" alt="" />Colored</a></h1>
            </div>
            <div class="full-screen">
                <section class="full-top">
                    <button id="toggle"><i class="fa fa-arrows-alt" aria-hidden="true"></i></button>
                </section>
            </div>

            <div class="header-right">
                <div class="profile_details_left">

                    <div class="profile_details">
                        <ul>
                            <li class="dropdown profile_details_drop">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <div class="profile_img">
                                        <span class="prfil-img"><i class="fa fa-user" aria-hidden="true"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                                <ul class="dropdown-menu drp-mnu">
                                    <li> <a href="#"><i class="fa fa-sign-out"></i> Logout</a> </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </section>
        <div class="main-grid">
            <div class="agile-grids">
                <!-- input-forms -->
                <div class="grids">

                    <div class="panel panel-widget forms-panel">
                        <div class="progressbar-heading general-heading">
                            <h4>Friend Request:</h4>
                        </div>

                        <div class="forms">
                            <h3 class="title1"></h3>
                            {% if error is defined and error =="1"  %}
                                <div style="margin: 20px;padding: 10px;background: #2CCCAB;color: #ffffdd;">Data Base Error</div>
                            {% endif %}
                            {% if notification is defined and notification =="2"  %}
                                <div style="margin: 20px;padding: 10px;color: #ffffdd;background: #0e8f9f;">Friend Request Already Send</div>
                            {% endif %}
                            <div class="form-three widget-shadow">
                                <div>
                                    {% if allRequestList is defined  %}
                                        {% for request in allRequestList  %}

                                            <div style="width:110px;height: 150px;float: left;margin: 20px;">
                                                <div style="width: 110px;height: 80px;border: 1px solid #d09c0d;"></div>
                                                <div style="text-align: center;">{{ request.studentObject.studentName }}</div>
                                                <div style="text-align: center;">
                                                    <form action="{{ path('app_default_friend_request') }}" method="post">
                                                        <button  style="font-size: 12px;background: #fcb216;border: #fcb216;padding: 8px;" name="friend_request_accept" value="{{ request.id }}">Accept Request</button>
                                                    </form>

                                                </div>
                                            </div>

                                        {% endfor %}
                                    {% endif %}
                                    <div style="clear: both;"></div>
                                </div>

                            </div>
                        </div>
                    </div>




                </div>
                <!-- //input-forms -->
            </div>
        </div>
        <!-- footer -->
        <div class="footer">
            <p>Â© 2016 Colored . All Rights Reserved .</p>
        </div>
        <!-- //footer -->
    </section>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <script src="{{ asset('js/proton.js') }}"></script>
{% endblock %}

